{
  "name": "solaire",
  "version": "0.0.0",
  "description": "The grossly incandescent procedural generation framework",
  "main": "dist/solaire.js",
  "jsnext:main": "dist/solaire.module.js",
  "module": "dist/solaire.module.js",
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "procedural-generation",
    "game-development"
  ],
  "scripts": {
    "lint": "eslint src test",
    "test": "karma start --single-run --browsers ChromeHeadless",
    "clean": "rimraf build dist",
    "build": "rollup --config",
    "start": "serve --port 8080",
    "report-coverage": "cat ./build/coverage/lcov.info | codecov",
    "commitmsg": "validate-commit-msg",
    "release": "standard-version"
  },
  "config": {
    "validate-commit-msg": {
      "helpMessage": "See README for guidelines",
      "autoFix": true
    }
  },
  "engines": {
    "node": "6.x",
    "npm": "3.x"
  },
  "dependencies": {
    "clamp": "^1.0.1",
    "merge": "^1.2.0",
    "seedrandom": "^2.4.3"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-external-helpers": "^6.18.0",
    "babel-preset-es2015": "^6.24.1",
    "codecov.io": "^0.1.6",
    "eslint": "^4.19.1",
    "eslint-plugin-jasmine": "^2.9.3",
    "husky": "^0.14.3",
    "jasmine": "^3.1.0",
    "jasmine-core": "^3.1.0",
    "karma": "^2.0.2",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.1.0",
    "karma-jasmine": "^1.1.1",
    "karma-rollup-preprocessor": "^5.1.1",
    "karma-safari-launcher": "^1.0.0",
    "karma-spec-reporter": "0.0.32",
    "rimraf": "^2.6.1",
    "rollup": "^0.58.2",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-istanbul": "^2.0.1",
    "rollup-plugin-node-resolve": "^3.3.0",
    "serve": "^6.5.6",
    "standard-version": "^4.3.0",
    "validate-commit-msg": "^2.12.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jsalis/solaire.git"
  },
  "author": "jsalis <johnsalis@live.com>",
  "license": "MIT"
}
